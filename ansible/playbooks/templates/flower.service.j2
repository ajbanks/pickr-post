[Unit]
Description=Flower Service
After=network.target

[Service]
Type=simple
User={{ web_user }}
Group={{ web_user }}
WorkingDirectory={{ app_root }}
ExecStart=/bin/sh -c '{{ CELERY_BIN }} -A {{ CELERY_APP }} flower {{ FLOWERD_OPTS }}'
ExecReload=/bin/kill -HUP ${MAINPID}
Restart=always

[Install]
WantedBy=multi-user.target
